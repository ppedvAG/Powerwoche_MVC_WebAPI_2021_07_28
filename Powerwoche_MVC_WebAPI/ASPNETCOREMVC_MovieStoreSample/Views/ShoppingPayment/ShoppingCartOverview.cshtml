@model IEnumerable<ASPNETCOREMVC_MovieStoreSample.Models.Movie>

@{
    ViewData["Title"] = "ShoppingCartOverview";
}

<h1>ShoppingCartOverview</h1>

@if (Model.Count() != 0)
{
    <form asp-controller="ShoppingPayment" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Desciption)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preis)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Desciption)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preis)
                        </td>
                        <td>
                            <button class="btn-dark" asp-action="Delete" asp-route-id="@item.Id" type="submit">-</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
}
else
{
    <p>Es befinden sich keine Artikel im Warenkorb</p>
}


